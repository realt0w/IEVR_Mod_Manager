<Window x:Class="IEVRModManager.Windows.PacksWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="data/packs warning" Height="420" Width="560"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Border Background="{StaticResource BgBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="2"
            CornerRadius="8"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icon and Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="⚠"
                           FontSize="32"
                           Foreground="{StaticResource WarningBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBlock x:Name="TitleText"
                           Text="Warning: data/packs"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Warning Message -->
            <TextBlock Grid.Row="1"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,15">
                <Run x:Name="WarningMessage1" Text="Some mods will modify the "/>
                <Run x:Name="WarningMessage2" Text="data/packs" FontWeight="Bold"/>
                <Run x:Name="WarningMessage3" Text=" folder. This is not recommended and may corrupt your game installation. "/>
                <Run x:Name="WarningMessage4" Text="You can cancel or continue at your own risk."/>
            </TextBlock>

            <!-- Mods List -->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="200"
                          Margin="0,0,0,15">
                <ItemsControl x:Name="ModsListControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="•"
                                           Foreground="{StaticResource WarningBrush}"
                                           FontSize="14"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding}"
                                           Foreground="{StaticResource TextBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="110"
                        Margin="0,0,10,0"
                        Click="Cancel_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#d46b5a"/>
                                    <Setter Property="BorderBrush" Value="#d46b5a"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#c05a4a"/>
                                    <Setter Property="BorderBrush" Value="#c05a4a"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="ContinueButton"
                        Content="Continue"
                        Style="{StaticResource AccentButtonStyle}"
                        Width="130"
                        Click="Continue_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
