<Window x:Class="IEVRModManager.Windows.DownloadsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloads" Height="370" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="Download Links" 
               FontSize="18" FontWeight="Bold" 
               Foreground="{StaticResource TextBrush}"
               Margin="0,0,0,10"/>

        <!-- Links -->
        <StackPanel Grid.Row="1" Margin="0,10" Orientation="Vertical">
            <TextBlock x:Name="GameBananaLink" 
                       Text="ðŸ”— Download Mods from GameBanana" 
                       Foreground="{StaticResource AccentBrush}"
                       FontSize="12"
                       Cursor="Hand"
                       MouseEnter="Link_MouseEnter"
                       MouseLeave="Link_MouseLeave"
                       MouseLeftButtonDown="GameBananaLink_Click"
                       Margin="0,12"/>

            <TextBlock x:Name="ViolaLink" 
                       Text="ðŸ”— Download Viola.CLI-Portable.exe" 
                       Foreground="{StaticResource AccentBrush}"
                       FontSize="12"
                       Cursor="Hand"
                       MouseEnter="Link_MouseEnter"
                       MouseLeave="Link_MouseLeave"
                       MouseLeftButtonDown="ViolaLink_Click"
                       Margin="0,12"/>
            
            <TextBlock x:Name="CpkListLink" 
                       Text="ðŸ”— cpk_list.cfg.bin repository" 
                       Foreground="{StaticResource AccentBrush}"
                       FontSize="12"
                       Cursor="Hand"
                       MouseEnter="Link_MouseEnter"
                       MouseLeave="Link_MouseLeave"
                       MouseLeftButtonDown="CpkListLink_Click"
                       Margin="0,12"/>

            <Button Content="â¬‡ï¸ Download cpk_list"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Left"
                    Width="180"
                    Click="DownloadCpkListButton_Click"/>
            
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" 
                Style="{StaticResource PrimaryButtonStyle}" 
                Width="140" HorizontalAlignment="Right" 
                Click="Close_Click" Margin="0,20,0,0"/>
    </Grid>
</Window>

