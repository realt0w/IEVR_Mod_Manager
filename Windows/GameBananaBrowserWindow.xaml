<Window x:Class="IEVRModManager.Windows.GameBananaBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameBanana Mods"
        Height="720" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgBrush}">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="RefreshButton"
                    Content="âŸ³ Refresh"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="Refresh_Click"
                    Width="130"
                    Margin="0,0,8,0"/>
            <TextBlock x:Name="StatusText"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource TextBrush}"
                       FontWeight="Bold"
                       Text="Loading mods..."
                       Margin="8,0,0,0"/>
        </StackPanel>

        <ListBox x:Name="ModsList"
                 Grid.Row="1"
                 SelectionMode="Single"
                 MouseDoubleClick="ModsList_MouseDoubleClick"
                 BorderThickness="0"
                 Background="{StaticResource BgBrush}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{StaticResource AccentBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Margin="6"
                            Padding="8"
                            Width="260"
                            Height="240"
                            Background="{StaticResource BgBrush}"
                            Cursor="Hand">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel x:Name="ContentPanel" Grid.RowSpan="4">
                                <Image Source="{Binding ThumbnailUrl}"
                                       Height="140"
                                       Stretch="UniformToFill"
                                       Margin="0,0,0,6"/>
                                <TextBlock Text="{Binding Name}"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxHeight="22"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextBrightBrush}"
                                           Margin="0,0,0,4"/>
                                <Button Content="Open"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Tag="{Binding}"
                                        Click="OpenPage_Click"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Bottom"
                                        Margin="0,8,0,0"/>
                            </StackPanel>
                            <StackPanel x:Name="SkeletonPanel" Visibility="Collapsed" Grid.RowSpan="4">
                                <Rectangle Height="140"
                                           RadiusX="4"
                                           RadiusY="4"
                                           Fill="{StaticResource AccentBrush}"
                                           Opacity="0.12"
                                           Margin="0,0,0,6"/>
                                <Rectangle Height="16"
                                           Fill="{StaticResource TextBrush}"
                                           Opacity="0.16"
                                           RadiusX="3"
                                           RadiusY="3"
                                           Margin="0,0,0,6"/>
                                <Rectangle Height="34"
                                           Fill="{StaticResource AccentBrush}"
                                           Opacity="0.14"
                                           RadiusX="4"
                                           RadiusY="4"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsPlaceholder}" Value="True">
                            <Setter TargetName="ContentPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="SkeletonPanel" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Row="2"
                   x:Name="FooterText"
                   Text="Double click opens the mod page."
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,10,0,0"
                   Loaded="FooterText_Loaded"/>
    </Grid>
</Window>
