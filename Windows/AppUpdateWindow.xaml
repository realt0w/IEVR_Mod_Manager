<Window x:Class="IEVRModManager.Windows.AppUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Update"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgBrush}"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   x:Name="TitleText"
                   Text="Update Available"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,16"/>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,16">
            <StackPanel>
                <TextBlock x:Name="MessageText"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,0,0,12"/>
                
                <TextBlock x:Name="ReleaseNotesLabel"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextBrush}"
                           FontSize="12"
                           FontWeight="Bold"
                           Margin="0,8,0,4"
                           Visibility="Collapsed"/>
                
                <FlowDocumentScrollViewer x:Name="ReleaseNotesViewer"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         Margin="0,0,0,0"
                                         Visibility="Collapsed"
                                         Background="Transparent"
                                         BorderThickness="0"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OpenGameBananaButton"
                    Content="Open GameBanana Page"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="200"
                    Margin="0,0,8,0"
                    Click="OpenGameBananaButton_Click"/>
            <Button x:Name="LaterButton"
                    Content="Later"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"
                    Click="LaterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
