<Window x:Class="IEVRModManager.Windows.ConflictWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Conflicts Detected" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Border Background="{StaticResource BgBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="2"
            CornerRadius="8"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icon and Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="âš " 
                           FontSize="32" 
                           Foreground="{StaticResource WarningBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBlock x:Name="TitleText"
                           Text="File Conflicts Detected" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Warning Message -->
            <TextBlock Grid.Row="1"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,15">
                <Run x:Name="WarningMessage1" Text="Multiple mods are trying to modify the same files. "/>
                <Run x:Name="WarningMessage2" Text="The mod with higher priority will override the others." FontWeight="Bold"/>
                <LineBreak/>
                <Run x:Name="WarningMessage3" Text="The following files have conflicts:"/>
            </TextBlock>

            <!-- Conflicts List -->
            <ScrollViewer Grid.Row="2" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          MaxHeight="250"
                          Margin="0,0,0,15">
                <ItemsControl x:Name="ConflictsListControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8"
                                    Margin="0,4">
                                <StackPanel>
                                    <TextBlock Text="{Binding Key}" 
                                               Foreground="{StaticResource TextBrush}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Value}" 
                                               Foreground="{StaticResource TextBrush}"
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="CancelButton"
                        Content="Cancel" 
                        Width="100" 
                        Margin="0,0,10,0"
                        Click="Cancel_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#d46b5a"/>
                                    <Setter Property="BorderBrush" Value="#d46b5a"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#c05a4a"/>
                                    <Setter Property="BorderBrush" Value="#c05a4a"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="ContinueButton"
                        Content="Continue" 
                        Style="{StaticResource AccentButtonStyle}" 
                        Width="100" 
                        Click="Continue_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>