<Window x:Class="IEVRModManager.Windows.ProfileManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mod Profiles" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BgBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label x:Name="TitleLabel" Grid.Row="0" Content="Mod Profiles" 
               FontSize="18" FontWeight="Bold" 
               Foreground="{DynamicResource TextBrush}"
               Margin="0,0,0,10"/>

        <!-- Profiles List -->
        <ListBox x:Name="ProfilesListBox"
                 Grid.Row="1"
                 SelectionMode="Single"
                 Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding Name}" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrightBrush}"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding ModsCount}" 
                                       FontSize="11"
                                       Foreground="{StaticResource TimestampBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding LastModifiedDateDisplay}"
                                   FontSize="10"
                                   Foreground="{StaticResource TimestampBrush}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Profile Name Input -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Profile Name:" 
                   Foreground="{DynamicResource TextBrush}" 
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>
            <TextBox Grid.Column="1" x:Name="ProfileNameTextBox"
                     Margin="0"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="LoadButton" Content="Load" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Width="100" Margin="0,0,8,0"
                    Click="LoadButton_Click"/>
            <Button x:Name="SaveButton" Content="Save" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Width="100" Margin="0,0,8,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="DeleteButton" Content="Delete" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Width="100" Margin="0,0,8,0"
                    Click="DeleteButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Width="100"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

