<Window x:Class="IEVRModManager.Windows.SuccessMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mods Applied" Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Border Background="{StaticResource BgBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="2"
            CornerRadius="8"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icon and Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="✓" 
                           FontSize="32" 
                           Foreground="{StaticResource SuccessBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBlock x:Name="TitleText"
                           Text="Mods Applied Successfully" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock x:Name="MessageTextBlock"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,10"/>

            <!-- Mods List -->
            <ScrollViewer Grid.Row="2" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="180"
                          Margin="0,0,0,15">
                <ItemsControl x:Name="ModsListControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="•" 
                                           Foreground="{StaticResource SuccessBrush}"
                                           FontSize="14"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding}" 
                                           Foreground="{StaticResource TextBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- OK Button -->
            <Button x:Name="OKButton"
                    Grid.Row="3" 
                    Content="OK" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Width="100" 
                    HorizontalAlignment="Right" 
                    Click="OK_Click"/>
        </Grid>
    </Border>
</Window>

